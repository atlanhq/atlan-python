def validate_multiselect(v, values, **kwargs):
    if isinstance(v, str):
        if v.startswith('['):
            data = json.loads(v)
            v = parse_obj_as(list[str], data)
        else:
            v = [v]
    return v


def validate_connection(v, values, config, field, **kwargs):
    v = Connection.parse_raw(v)


